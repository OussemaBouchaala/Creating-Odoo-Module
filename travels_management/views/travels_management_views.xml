<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Travels Management -->
    <record id="view_travels_management_view_form" model="ir.ui.view">
        <field name="name">travels.management.form</field>
        <field name="model">travels.management</field>
        <field name="arch" type="xml">
            <form string="Travels">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="booking_reference" readonly="1"/>
                        </h1>
                    </div>
                    <group col="4" colspan="4" name="order_fields">
                        <field name="booking_reference"/>
                        <field name="partner_id"/>
                        <field name="company_id"/>
                        <field string="User" name="no_of_passengers"/>
                        <field name="booking_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Travels Management -->
    <record id="travels_management_view_tree" model="ir.ui.view">
        <field name="name">travels.management.tree</field>
        <field name="model">travels.management</field>
        <field name="arch" type="xml">
            <tree string="Travels">
                <field name="booking_reference" string="Booking reference"/>
                <field name="partner_id" string="Customer" readonly="1"/>
                <field name="booking_date" widget="date"/>
                <field name="state" invisible="1"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Action for Travels Management -->
    <record id="travels_management_model_action" model="ir.actions.act_window">
        <field name="name">Travels Management</field>
        <field name="res_model">travels.management</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Item for Travels Management -->
    <menuitem id="travels_menu_root" name="Travels Management"/>

    <!-- Submenu for Travels Management -->
    <menuitem id="travels_management_model_menu_action"
              action="travels_management_model_action" name="Booking"
              parent="travels_menu_root"/>
</odoo>
